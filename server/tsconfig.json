{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "strictNullChecks": true
    },
    "lib": ["es2015"],
    "include": ["./src/**/*", "./*"],
    "exclude": ["./node_modules", "jest.config.js"]
}
